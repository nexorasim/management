{
  "name": "myesimplus-portal",
  "version": "1.0.0",
  "description": "Production-ready eSIM Management Portal for My eSIM Plus",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "test": "jest",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:cov": "jest --coverage",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "docker:build": "docker build -t myesimplus-portal .",
    "docker:run": "docker run -p 3000:3000 myesimplus-portal",
    "deploy:dev": "npm run build && npm run docker:build",
    "deploy:prod": "npm run test && npm run build && npm run docker:build"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.7",
    "@nestjs/core": "^10.2.7",
    "@nestjs/platform-express": "^10.2.7",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/swagger": "^7.1.13",
    "@nestjs/graphql": "^12.0.9",
    "@nestjs/apollo": "^12.0.9",
    "@apollo/server-express": "^4.9.5",
    "express": "^4.18.2",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "node-cron": "^3.0.2",
    "axios": "^1.5.1",
    "xml2js": "^0.6.2",
    "node-forge": "^1.3.1",
    "aws-sdk": "^2.1479.0",
    "multer": "^1.4.5-lts.1",
    "csv-parser": "^3.0.0",
    "graphql": "^16.8.1",
    "apollo-server-express": "^3.12.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.18",
    "@types/node": "^20.8.0",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "@types/bcryptjs": "^2.4.4",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/cors": "^2.8.14",
    "@types/compression": "^1.7.3",
    "@types/multer": "^1.4.8",
    "@types/xml2js": "^0.4.12",
    "@types/node-forge": "^1.3.5",
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.14",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "prettier": "^3.0.3"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "keywords": ["esim", "mdm", "apple", "ios", "enterprise", "telecom"],
  "author": "My eSIM Plus",
  "license": "PROPRIETARY"
}