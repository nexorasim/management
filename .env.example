# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=myesimplus

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Apple MDM Configuration
APNS_CERT_PATH=/app/certs/apns-cert.pem
APNS_KEY_PATH=/app/certs/apns-key.pem
APNS_TOPIC=com.apple.mgmt.External
APNS_PRODUCTION=false

# Apple Business Manager Configuration
ABM_BASE_URL=https://mdmenrollment.apple.com

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_KMS_KEY_ID=your-kms-key-id

# Frontend Configuration
FRONTEND_URL=https://enterprise.myesimplus.com
NEXT_PUBLIC_API_URL=https://api.myesimplus.com/api/v1
NEXT_PUBLIC_GRAPHQL_URL=https://api.myesimplus.com/graphql

# Carrier Configuration
MPT_API_URL=https://api.mpt.com.mm
ATOM_API_URL=https://api.atom.com.mm
OOREDOO_API_URL=https://api.ooredoo.com.mm
MYTEL_API_URL=https://api.mytel.com.mm

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=admin

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@myesimplus.com
SMTP_PASS=your-email-password

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/application.log

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://enterprise.myesimplus.com

# Feature Flags
ENABLE_APPLE_MDM=true
ENABLE_ESIM_TRANSFER=true
ENABLE_BULK_OPERATIONS=true
ENABLE_AUDIT_LOGGING=true